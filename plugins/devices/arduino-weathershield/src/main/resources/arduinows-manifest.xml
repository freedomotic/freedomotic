<config>
    <properties>
        <property name="description"    value="Arduino based weather sensor"/>
        <property name="protocol.name"  value="arduino-weathershield"/>
        <property name="category"       value="protocol"/>
        <property name="short-name"     value="weathershield"/>
        <property name="delimiter" value=":"/>
        <property name="time-between-read"   value="10000"/>
        <property name="max-failures" value="0"/>
    </properties>
    <tuples>
        <tuple>
            <property name="ip-to-query" value="192.168.0.150"/>
            <property name="port-to-query" value="80"/>
        </tuple>
        <tuple>
            <property name="object.class" value="Thermometer"/>
            <property name="temperature" value="Arduino WeatherShield reads temperature"/>
        </tuple>
        <tuple>
            <property name="object.class" value="Barometer"/>
            <property name="pressure" value="Arduino WeatherShield reads pressure"/>
        </tuple>
        <tuple>
            <property name="object.class" value="Hygrometer"/>
            <property name="humidity" value="Arduino WeatherShield reads humidity"/>
        </tuple>
    </tuples>
</config>
