<config>
    <properties>
        <property name="description" value="Plugin for OpenWebNet protocol"/>
        <property name="protocol.name" value="openwebnet"/>        
        <property name="category" value="protocol"/>
        <property name="short-name" value="openwebnet"/>
        <property name="host" value="127.0.0.1"/>
        <property name="port" value="20000"/>
        <property name="startup-time" value="on load"/>
    </properties>
    <tuples>
        <tuple>
            <property name="object.class" value="Light"/>
            <property name="powered" value="OWN protocol reads a light power change"/>
            <property name="brightness" value="OWN protocol reads a light brightness change"/>
            <property name="turn on" value="Turn on OWN light"/>
            <property name="turn off" value="Turn off OWN light"/>
            <property name="set brightness" value="Dim OWN light"/>
        </tuple>
        <tuple>
            <property name="object.class" value="Thermostat"/>
            <property name="temperature" value="OWN protocol reads a temperature value"/>
            <property name="setpoint" value="OWN protocol reads a setpoint value"/>
        </tuple>
    </tuples>

</config>
