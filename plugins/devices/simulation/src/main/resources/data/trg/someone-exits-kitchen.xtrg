<trigger>
  <name>When someone goes out of the Kitchen</name>
  <description>Someone goes out of the kitchen area</description>
  <uuid>a1b02741-dcbb-4919-a5ec-3aa91b8dac34</uuid>
  <channel>app.event.sensor.person.zone.exit</channel>
  <payload>
    <payload>
      <com.freedomotic.reactions.Statement>
        <logical>AND</logical>
        <attribute>zone.name</attribute>
        <operand>EQUALS</operand>
        <value>Kitchen</value>
      </com.freedomotic.reactions.Statement>
      <com.freedomotic.reactions.Statement>
        <logical>AND</logical>
        <attribute>person.id</attribute>
        <operand>EQUALS</operand>
        <value>ANY</value>
      </com.freedomotic.reactions.Statement>
    </payload>
  </payload>
  <suspensionTime>0</suspensionTime>
  <hardwareLevel>false</hardwareLevel>
  <persistence>true</persistence>
  <delay>0</delay>
  <priority>0</priority>
  <maxExecutions>-1</maxExecutions>
  <numberOfExecutions>0</numberOfExecutions>
</trigger>
